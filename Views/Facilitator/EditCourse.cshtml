@{ 
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="edit-section spad">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Edit Course</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7 p-0">
                <div class="section-subtitle">
                    <h3>Basic Information</h3>
                </div>
                <div class="form-group mt-5">
                    <label for="courseTitle">Course Title</label>
                    <input type="text" class="form-control form-control-lg" id="courseTitle" placeholder="">
                </div>

                <label class="mt-5" for="courseTitle">Description</label>
                <div id="toolbar"></div>
                <div aria-describedby="descriptionHelp" id="editor"></div>
                <small id="descriptionHelp" class="form-text text-muted">Shortly describe this course.</small>

                <label class="mt-5" for="courseTitle">Sections</label>
                <div id="accordion" class="mt-3 accordion">
                    <div class="card border-2 mb-0 mb-5 shadow">
                        <div class="card-header collapsed" data-toggle="collapse" href="#collapseOne">
                            <a class="card-title"> Course Overview </a>
                        </div>
                        <div id="collapseOne" class="card-body p-0 collapse moreCollapse" data-parent="#accordion">
                            <ul id="sortable" class="section_menu" aria-labelledby="userDropdown">
                                <li class="section-item ui-state-default">
                                    <a href="#" class="d-inline">
                                        <i class="fas fa-grip-lines fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Watch Trailer
                                        <p style="float: right; margin: 0px; font-size:14px;color:rgba(0, 0, 0, 0.5);">5m 24s</p>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card border-2 mb-0 mb-5 shadow">
                        <div class="card-header collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                            <a class="card-title"> Getting Started with UX Design </a>
                        </div>
                        <div id="collapseTwo" class="card-body p-0 collapse moreCollapse" data-parent="#accordion">
                            <!-- Dropdown - User Information -->
                            <ul id="sortable" class="section_menu" aria-labelledby="userDropdown">
                                <li class="section-item ui-state-default">
                                    <a href="#" class="d-inline">
                                        <i class="fas fa-grip-lines fa-sm fa-fw mr-2 text-gray-400"></i>
                                        <!-- <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i> -->
                                        Introduction
                                        <p style="float: right; margin: 0px; font-size:14px;color:rgba(0, 0, 0, 0.5);">5m 24s</p>
                                    </a>
                                </li>
                                <!-- <div class="dropdown-divider"></div> -->
                                <li class="section-item ui-state-default">
                                    <a href="#" class="d-inline">
                                        <i class="fas fa-grip-lines fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Introduction to Adobe XD
                                        <p style="float: right; margin: 0px; font-size:14px;color:rgba(0, 0, 0, 0.5);">42m 14s</p>
                                    </a>
                                </li>
                                <!-- <div class="dropdown-divider"></div> -->
                                <li class="section-item ui-state-default">
                                    <a href="#" class="d-inline">
                                        <i class="fas fa-grip-lines fa-sm fa-fw mr-2 text-gray-400"></i>
                                        The Artboard and its Components
                                        <p style="float: right; margin: 0px; font-size:14px;color:rgba(0, 0, 0, 0.5);">28m 4s</p>
                                    </a>
                                </li>
                                <!-- <div class="dropdown-divider"></div> -->
                                <li class="section-item ui-state-default no-border">
                                    <a href="#" class="d-inline" data-toggle="modal" data-target="#logoutModal">
                                        <i class="fas fa-grip-lines fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Introduction to Mockups
                                        <p style="float: right; margin: 0px; font-size:14px;color:rgba(0, 0, 0, 0.5);">1hr 24m 5s</p>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card border-2 mb-0 mb-5 shadow">
                        <div class="card-header collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                            <a class="card-title"> Wireframes and Prototyping </a>
                        </div>
                        <div id="collapseThree" class="collapse moreCollapse" data-parent="#accordion">
                            <div class="card-body p-0">
                                <ul id="sortable" class="section_menu" aria-labelledby="userDropdown">
                                    <li class="section-item ui-state-default">
                                        <a href="#" class="d-inline">
                                            <i class="fas fa-grip-lines fa-sm fa-fw mr-2 text-gray-400"></i>
                                            Animatons and Symbols
                                            <p style="float: right; margin: 0px; font-size:14px;color:rgba(0, 0, 0, 0.5);">5m 24s</p>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn mb-3 soft-btn" type="submit" onclick="createSection();">Add Section</button>
           </div>
       </div>
   </div>
</div>

